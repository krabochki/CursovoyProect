{$R *.dfm}

procedure TForm1.FormCreate(Sender: TObject);
begin
h:=loadcursorfromfile('C:\ДОСТАЛИ\pixelfun 3\hi.cur');
h1:=loadcursorfromfile('C:\ДОСТАЛИ\pixelfun 3\PF3C_zlk_Click2.cur');
h2:=loadcursorfromfile('C:\ДОСТАЛИ\pixelfun 3\PF3C_zlk_NO.cur');
h3:=loadcursorfromfile('C:\ДОСТАЛИ\pixelfun 3\PF3C_zlk_Help.cur');
h4:=loadcursorfromfile('C:\ДОСТАЛИ\pixelfun 3\pen.cur');
screen.Cursors[1]:=h;
screen.Cursors[2]:=h1;
screen.Cursors[3]:=h2;
screen.Cursors[4]:=h3;
screen.Cursors[5]:=h4;
form1.Cursor:=1;
unit4.songstatement:=4;
unit4.a:=2;
TResourceStream.Create(hInstance, 'MYFONT', RT_RCDATA).SavetoFile('fifaks10dev1');
AddFontResource(PChar('fifaks10dev1'));
TResourceStream.Create(hInstance, 'MYFONT1', RT_RCDATA).SavetoFile('hardpixel');
AddFontResource(PChar('hardpixel'));
AddFontResource('шрифты\Fifaks10Dev1.ttf');

image1.picture.LoadFromFile('фотокарточки\фон.bmp');
image2.Picture.LoadFromFile('фотокарточки\Без имени-11.bmp');
Image1.Align:=alClient;

MediaPlayer1.FileName := GetCurrentDir()+'\plastinki\start.mp3';
MediaPlayer1.Open;
MediaPlayer1.Play;

end;

procedure TForm1.FormDestroy(Sender: TObject);
begin
   RemoveFontResource(PChar('fifaks10dev1'));
    RemoveFontResource(PChar('hardpixel'));

end;

procedure TForm1.Button1Click(Sender: TObject);
begin
puzzleopen.showmodal;
end;

procedure TForm1.Timer1Timer(Sender: TObject);
begin
   label5.visible:=False;
label1.visible:=true;
Timer1.Enabled:=false;
Timer2.Enabled:=True;
end;

procedure TForm1.Timer2Timer(Sender: TObject);
begin
label1.Visible:=false;
label4.visible:=true;
Timer2.Enabled:=false;
Timer3.Enabled:=True;
end;

procedure TForm1.Timer3Timer(Sender: TObject);
begin
label4.Visible:=false;
label5.visible:=true;
Timer3.Enabled:=false;
Timer1.Enabled:=True;
end;

procedure TForm1.Image2Click(Sender: TObject);
begin
form3.show;
form1.Hide;
mediaplayer1.destroy;
end;

procedure TForm1.Image3Click(Sender: TObject);
begin

image4.Align:=alclient;
image4.Visible:=true;
form4.showmodal;
end;

procedure TForm1.Label2Click(Sender: TObject);
begin
   shellexecute(0,pchar('open'),pchar ('fggff.chm'),nil,nil,SW_SHOW);

end;

