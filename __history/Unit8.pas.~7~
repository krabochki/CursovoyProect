{$R *.dfm}

procedure TPLANETS.FormClose(Sender: TObject; var Action: TCloseAction);
begin
planets.Close;
end;

procedure TPLANETS.FormCreate(Sender: TObject);
begin
  n:=1;
  memo1.Lines.loadfromfile('текст\Введение.txt');

  Screen.MenuFont.Name := 'Fifaks 1.0 dev1'; //установка шрифта в меню формы
  Screen.MenuFont.size := 12; //установка размера шрифта в меню формы
  SendMessage(Memo1.Handle, EM_GETRECT, 0, LongInt(@Rect)); //расширение отступов в поле Memo1
  Rect.Left:= 20;
  Rect.Top:= 20;
  SendMessage(Memo1.Handle, EM_SETRECT, 0, LongInt(@Rect));
  Memo1.Refresh;


   planets.Cursor:=1;
  timer3.Enabled:=true;

if image9.Visible=true then  begin

   GIF:=TGIFImage.Create;
GIF.LoadFromFile ('Новая папка\5c97bf414c9cea1.gif');
GIF.Animate:=True;

Image9.Picture.Assign(GIF);
timer1.Enabled:=true;
end;   end;

procedure TPLANETS.FormKeyPress(Sender: TObject; var Key: Char);
begin
timer2.Enabled:=false;
timer1.Enabled:=false;
   image9.Visible:=false;
image11.visible:=true;
gif.Animate:=false;
image10.Visible:=false;
n1.Visible:=true;
n2.Visible:=true;
n3.Visible:=true ;
image12.Visible:=true;
planets2.N1.Visible:=true;
planets2.N2.visible:=true;
planets2.N3.Visible:=true;
planets2.Image9.Visible:=false;
planets2.Image3.Visible:=true;
end;

procedure TPLANETS.Image12Click(Sender: TObject);
begin
   image12.Visible:=false;
image13.Visible:=true;
image14.Visible:=true;
image11.Visible:=false;
planets2.Image3.Visible:=false;
planets2.Image4.Visible:=true;
end;

procedure TPLANETS.Image13Click(Sender: TObject);
begin
 image14.Visible:=false;
image13.Visible:=false;
image1.Visible:=true;
memo1.Visible:=true;
planets2.Image4.Visible:=false;
planets2.Image1.Visible:=true;
planets2.Image2.Visible:=true;
image2.Visible:=true;
image3.Visible:=true;
image4.Visible:=true;
image5.Visible:=true;
image6.Visible:=true;
image3.Visible:=true;
image7.Visible:=true;
image15.Visible:=true;
end;

procedure TPLANETS.Image4Click(Sender: TObject);
begin
 if n<6 then begin
n:=n+1;
image4.Enabled:=true;
end;
if n=6 then
image4.Enabled:=false;
if n>1 then
image6.Enabled:=true;
if n=1 then
  begin
    memo1.Lines.loadfromfile('текст\Введение2.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок1.png');
    image3.Picture.LoadFromFile('новая папка\тема.png');
  end;
if n=2 then
  begin
    memo1.Lines.loadfromfile('текст\2.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок2.png');
    image3.Picture.LoadFromFile('новая папка\тема2.png');
  end;
if n=3 then
  begin
    memo1.Lines.loadfromfile('текст\3.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок3.png');
    image3.Picture.LoadFromFile('новая папка\тема3.png');
  end;
if n=4 then
  begin
    memo1.Lines.loadfromfile('текст\4.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок4.png');
    image3.Picture.LoadFromFile('новая папка\тема4.png');
  end;
if n=5 then
  begin
    memo1.Lines.loadfromfile('текст\5.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок5.png');
    image3.Picture.LoadFromFile('новая папка\тема5.png');
  end;
if n=6 then
  begin
    memo1.Lines.loadfromfile('текст\6.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок6.png');
    image3.Picture.LoadFromFile('новая папка\тема6.png');
  end;

end;

procedure TPLANETS.Image4MouseEnter(Sender: TObject);
begin
 if image4.Enabled=true then
planets.Cursor:=2 else planets.Cursor:=3;
end;

procedure TPLANETS.Image4MouseLeave(Sender: TObject);
begin
planets.Cursor:=1;
end;

procedure TPLANETS.Image5Click(Sender: TObject);
begin
planets.close;
planets2.Close;
end;

procedure TPLANETS.Image6Click(Sender: TObject);
begin
 if n=6 then  image4.Enabled:=true;

if n>1 then
begin
n:=n-1;
image6.Enabled:=true;
end;
if n=1 then image6.Enabled:=false;
if n=1 then
  begin
    memo1.Lines.loadfromfile('текст\Введение2.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок1.png');
    image3.Picture.LoadFromFile('новая папка\тема.png');
  end;
if n=2 then
  begin
    memo1.Lines.loadfromfile('текст\2.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок2.png');
    image3.Picture.LoadFromFile('новая папка\тема2.png');
  end;
if n=3 then
