    memo1.Lines.loadfromfile('текст\3.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок3.png');
    image3.Picture.LoadFromFile('новая папка\тема3.png');
  end;
if n=4 then
  begin
    memo1.Lines.loadfromfile('текст\4.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок4.png');
    image3.Picture.LoadFromFile('новая папка\тема4.png');
  end;
if n=5 then
  begin
    memo1.Lines.loadfromfile('текст\5.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок5.png');
    image3.Picture.LoadFromFile('новая папка\тема5.png');
  end;
if n=6 then
  begin
    memo1.Lines.loadfromfile('текст\6.txt');
    image2.Picture.LoadFromFile('новая папка\заголовок6.png');
